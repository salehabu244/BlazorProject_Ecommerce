@page
@model RegisterModel
<style>

    body {
        background-color: ivory;
    }

    * {
        box-sizing: border-box;
    }
</style>
@{
    ViewData["Title"] = "Register";
}

<div class="bg-info shadow-lg">
    <h1 class="text-secondary text-center">@ViewData["Title"]</h1>


    <div class="row mt-10">
        <div class="col-6 m-auto ">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-1">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-1">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mt-1 mb-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-primary shadow-bg">Register</button>

                <br />
                <br />
            </form>
        </div>

    </div>
</div>
<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
